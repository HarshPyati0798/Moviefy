<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%- apiData.title %></title>
    <link rel="stylesheet" href="/css/movie.css">
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Dosis" rel="stylesheet">
</head>
<body>
    <div class="movie">
        <div>
            <img src="<%- 'http://image.tmdb.org/t/p/original' + apiData.backdrop_path %>" class="poster" alt="<%- apiData.title %>">
            <!-- <img src="<%- 'http://image.tmdb.org/t/p/original' + apiData.poster_path %>" class = "logo" alt="<%- apiData.title %>"> -->
            <h1 style="text-align:center;color: #e22d2d"><%- apiData.title.toUpperCase() %></h1>
            <h3 class="overview">Overview</h3>
            <p class="desc"><%- apiData.overview %></p>
            <h3 class="genres">Genres</h3>
            <ol class="genre">
                <% apiData.genres.forEach(function(genre){ %>
                    <%- include('list_items',{item:genre.name}) %>
                <% }); %>
            </ol>
            <% let runTimeHours = apiData.runtime / 60 %> 
            <h3 style="text-align:center;color:#4d4d4d;margin-top:10px;">Runtime</h3>
            <p style="color: #e22d2d; text-align: center;margin-top:5px;font-weight:bolder"><%- runTimeHours.toFixed(2) +' hours'  %></p>
            <h3 style="text-align:center;color:#4d4d4d;margin-top:10px;">Vote Average</h3>
            <p style="color: #e22d2d;text-align: center;margin-top:5px;font-weight:bolder"><%- apiData.vote_average %></p>
        </div>
    </div>
</body>
</html>